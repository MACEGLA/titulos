<h1>Listando categorias</h1>

<%= form_tag categorias_path, :method => 'get' do %>
  <%= hidden_field_tag :direction, params[:direction] %>  
  <%= hidden_field_tag :sort, params[:sort] %>  
  <p>
    <%= text_field_tag :buscar, params[:buscar] %>
    <%= submit_tag "Buscar", :nombre => nil %>
  <P>
<% end %>

<%= paginate @categorias %>

<div class="table">

<table cellpadding="0" cellspacing="0" class="listing">
  <tr>
    <th><%= sortable "nombre" %></th>
    <th><%= sortable "disponible" %></th>
    <th></th>
    <th></th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td><%= link_to categoria.nombre, categoria %></td>
    <td><%= categoria.disponible %></td>

     <td>
      <%= link_to image_tag("edit-icon.gif") , edit_categoria_path(categoria) %>
    </td>

    <td><%= link_to 'Eliminar', categoria, :confirm => 'EstÃ¡ seguro?', :method => :delete %></td>
  </tr>
<% end %>
</table>
</div>
